@model ASP_NET_MVC.Models.Department
@{
    ViewBag.Title = "UpdateDepartment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Department</h2>
@using (@Html.BeginForm("SaveUpdateDepartment", "Department", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form">
        @Html.LabelFor(m => m.Id, "Department ID")
        @Html.TextBoxFor(m => m.Id, new { @readonly = "readonly", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Id)
    </div>
    <div class="form">
        @Html.LabelFor(m => m.Uni, "University")
        @Html.TextBoxFor(m => m.Uni, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Uni)
    </div>
    <div class="form">
        @Html.LabelFor(m => m.Name, "Department Name")
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div><input type="submit" value="Submit" class=" btn btn-success" /></div>
}
<style>
    .btn {
        margin: 10px;
    }
</style>

